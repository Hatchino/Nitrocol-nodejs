  <div class="container mt-5">
    <div class="row">
      <div class="col-md-12">
        <h1 class="text-center">Création d'un utilisateur</h1>  
      </div>
    </div>
    <div class="row mt-3">
      <div class="col-md-12">
        <form method="post" action="">
                <div class="mb-3">
                  <label for="titre" class="form-label">Nom d'utilisateur</label>
                  <input name="username" type="text" class="form-control" id="titre">
                </div>
                <div class="mb-3">
                  <label for="password" class="form-label">Mot de passe</label>
                  <input name="password" type="password" class="form-control" id="password">
                </div>
                <div class="mb-3">
                    <label for="fname" class="form-label">Prénom</label>
                    <input name="f_name" type="text" class="form-control" id="fname">
                  </div>
                  <div class="mb-3">
                    <label for="lname" class="form-label">Nom</label>
                    <input name="l_name" type="text" class="form-control" id="lname">
                  </div>
                  <div class="mb-3">
                    <label for="image" class="form-label">Url de l'image utilisateur</label>
                    <input name="img" type="text" class="form-control" id="image">
                  </div>
                <button type="submit" class="btn btn-primary">Submit</button>
        </form>
      </div>
    </div>
  </div>


  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
